@import "../../app.wxss";
.success {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  bottom: 0;
  background: #fff;
  z-index: 999;
}

.bg-container {
  position: relative;
}

.info {
  position: absolute;
  width: 100%;
  text-align: center;
  top: 55%;
  color: #fff;
}

.info .title {
  font-size: 50rpx;
  padding-bottom: 10rpx;
}

.info .tips {
  color: #fff;
  font-size: 26rpx;
}

.bg {
  width: 100%;
}

.btn-box {
  position: absolute;
  bottom: 0;
  padding: 50rpx;
  width: 100%;
  box-sizing: border-box;
}

.user-button {
  width: 100%;
}
