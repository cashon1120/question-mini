page{
  background: #2993ec;
}
.bg{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  bottom: 0;
  z-index: 0;
}
.bg image{
  width: 100%;
  height: 100%;
}
.question-container{
  position: relative;
  z-index: 99;
  color: #fff;
  box-sizing: border-box;
}

.top{
  padding: 30rpx 30rpx 30rpx 0;
}
.title{
  margin: 20rpx 0;
  padding-bottom: 40rpx;
  font-size: 32rpx;
}
.top-btn{
  border-radius: 0 50rpx 50rpx 0 !important;
  box-shadow: 0 0 30rpx rgba(237,136,33, 0) !important;
  padding: 25rpx 40rpx 25rpx 25rpx !important;
  display: inline-block;
}

.question-list{
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.answer view{
  margin-bottom: 30rpx;
  padding: 30rpx 40rpx;
  background: #FFFFFF;
  border-radius: 50rpx;
  color: #2080D9;
}
.answer view:active{
  background: #f9d4ad;
  color: #fff;
}
.answer view.active{
  background: #ff8d16;
  color: #fff;
}
.answer view label{
  width: 100% !important;
  display: block;
}
.current{
  font-size: 24rpx;
  color: #666;
}
.btn-area{
  position: relative;
  padding: 30rpx;
}
.btn-area a{
  display: block;
  color: #fff;
  text-align: center;
  padding: 30rpx;
}
.btn-area a:active{
  color: #37D9C0;
}

.submit{
  position: absolute;
  right: 0;
  display: block;
  border-radius:  50rpx 0 0 50rpx !important;
  padding: 30rpx 30rpx 30rpx 60rpx !important;
}
.submit image{
  right: auto;
  left: 30rpx;
  margin-top: -14rpx;
}

