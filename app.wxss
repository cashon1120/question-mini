/**app.wxss**/
page {
  background-color: #fbfbfb;
}

.container {
  height: 100%;
  padding: 20rpx 0;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.section {
  border-bottom: 1px solid #ebebeb;
  background: #fff;
  display: flex;
  align-items: center;
}

.section__title {
  width: 180rpx;
  padding: 20rpx;
}

.flex-container {
  display: flex;
}

.flex-1 {
  flex: 1;
  position: relative;
}

.picker {
  width: 100%;
}

.hideInput {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  bottom: 0;
  padding: 20rpx 0;
  z-index: 100;
  opacity: 0;
}

.btn-area {
  padding: 30rpx;
}

.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .3);
  z-index: 900;
}

.modal-content {
  position: absolute;
  width: 90%;
  left: 5%;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 10rpx;
}

.modal-title {
  font-size: 32rpx;
  text-align: center;
  border-radius: 10rpx 10rpx 0 0;
  background: #f6f6f8;
  padding: 25rpx 0;
}

.modal-main {
  padding: 30rpx 30rpx 0 30rpx;
  overflow: auto;
}

.modal-bottom {
  padding: 0 30rpx 30rpx 30rpx;
}

.company-group {
  float: left;
  width: 50%;
  text-align: left;
  margin-bottom: 30rpx;
}

.h1 {
  font-size: 35rpx;
  padding: 25rpx;
  text-align: center;
  position: relative;
}

.btn-edit {
  position: absolute;
  right: 20rpx;
  top: 50%;
  font-size: 30rpx;
  transform: translateY(-50%);
}

.form-container {
  position: relative;
}

.form-disabled {
  position: absolute;
  left: 0;
  width: 100%;
  top: 0;
  bottom: 130rpx;
  background: rgba(255, 255, 255, .3);
  z-index: 666;
}

.warning {
  text-align: center;
  padding-top: 0;
  padding-bottom: 30rpx;
  color: #d75555;
}