/**app.wxss**/
page {
  background-color: #fff;
  color: #585858;
  font-size: 30rpx;
}

.container {
  height: 100%;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  box-sizing: border-box;
}

.section {
  background: #eee;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  border-radius: 25rpx;
  padding-right: 30rpx;
  color: #000;
}
.section .flex-1{
  text-align: right;
}
.section .select-box{
  padding-right: 30rpx;
}
.section input{
  text-align: right;
  color: #000;
}
.section__title {
  width: 200rpx;
  padding: 30rpx;
}

.flex-container {
  display: flex;
}

.flex-1 {
  flex: 1;
  position: relative;
}

.picker {
  width: 100%;
}

.hideInput {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  bottom: 0;
  padding: 20rpx 0;
  z-index: 100;
  opacity: 0;
}

.btn-area {
  padding: 30rpx 0;
}

.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .3);
  z-index: 900;
}
button{
  font-size: 32rpx !important;
}

.modal-content {
  position: absolute;
  width: 90%;
  left: 5%;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}

.modal-title {
  color: #1B68D7;
  padding: 30rpx;
  font-size: 32rpx;
  text-align: left;
  border-radius: 10rpx 10rpx 0 0;
  border-bottom: 1px solid #ebebeb;
}
.tips{
  color: #999999;
  font-size: 26rpx;
}
.modal-main {
  padding: 30rpx 30rpx 0 30rpx;
  overflow: auto;
}

.modal-bottom {
  border-top: 1px solid #ebebeb;
  position: relative;
}
.modal-bottom::after{
  content: '';
  position: absolute;
  left: 50%;
  height: 50rpx;
  width: 1rpx;
  background: #ebebeb;
  top: 50%;
  margin-top: -25rpx;
}
.modal-bottom a {
  color: #1B68D7;
  display: block;
  text-align: center;
  padding: 30rpx;
}
.modal-bottom a:active{
  background: #f0f0f0;
}

.company-group {
  text-align: left;
  margin-bottom: 30rpx;
}

.h1 {
  font-size: 35rpx;
  padding: 25rpx;
  padding-bottom: 40rpx;
  text-align: center;
  position: relative;
}

.btn-edit {
  position: absolute;
  right: 20rpx;
  top: 50%;
  font-size: 30rpx;
  transform: translateY(-70%);
  color: #d75555;
}

.form-container {
  position: relative;
}

.form-disabled {
  position: absolute;
  left: 0;
  width: 100%;
  top: 0;
  bottom: 130rpx;
  background: rgba(255, 255, 255, .3);
  z-index: 666;
}

.warning {
  text-align: center;
  padding-top: 0;
  padding-bottom: 30rpx;
  color: #d75555;
}
radio, checkbox {
  transform:scale(0.7);
  position: relative;
  top: -3rpx;
}
.user-button {
  background: linear-gradient(to left, #FF8814, #FEA836) !important;
  border-radius: 50rpx !important;
  box-shadow: 0 0 30rpx rgba(237,136,33, 0.3);
  padding: 10rpx 0 !important;
  color: #fff !important;
}
.user-button-green {
  background: linear-gradient(to top, #20A28E ,#37D9C0) !important;
  border-radius: 50rpx !important;
  box-shadow: 0 0 30rpx rgba(0,0,0, 0.3);
  padding: 10rpx 0 !important;
  color: #fff !important;
}

.user-button:active{
  opacity: .9;
}
.user-button::after{
  display: none !important;
}
.icon-arrow{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 50%;
  margin-top: -15rpx;
  right: -5rpx;
}